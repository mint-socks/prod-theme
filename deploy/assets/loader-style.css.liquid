
/* 3D Bouncing ball */

#ballWrapper {
	width: 140px;
	height: 300px;
	position: fixed;
	left: 50%;
	top: 35%;
	margin-left: -70px;
	z-index: 100;
	cursor: pointer;
}

#ball {
	width: 150px;
	height: 140px;
	border-radius: 70px;
	background: rgb(255,255,255);
	background-image: url('{{ 'loader-logo.png' | asset_url }}');
	box-shadow: inset 0 -5px 15px rgba(255,255,255,0.4),
				inset -2px -1px 40px rgba(0,0,0,0.4),
				0 0 1px #000;
	position: absolute;
	top: 0;
	z-index: 11;
	cursor: pointer;
}
