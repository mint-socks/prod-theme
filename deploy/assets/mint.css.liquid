/*OVERRIDING GUMBY DEFAULTS*/

.btn.primary:hover{
  background-color: #27ffd6;
}
.contact-info h6:after{
  background: #19e6bf;
}

.footer a{
  color:#19e6bf;
  font-size:20px;
}

.footer a:hover{
  color:#27ffd6;
}
.update-q{
  cursor: pointer
}



@media only screen and (max-device-width: 480px) {
  .lpnav {
    display:none;
  }

  #navbar {
    display:block !important;
    top:0px;
  }

  .lp-logo{
    display:none;
  }

  .cbp-pggrid > li {
    width: 20%;
  }

  #blog {
    display:none;
  }

  .blog-mobile{
    display:none;
  }

  .product-viewers{
  height:500px;
  }

}

